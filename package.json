{
  "name": "frame-evolve",
  "version": "1.0.0",
  "description": "Professional-grade video upscaling and enhancement tool with AI-powered processing",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run react-dev\" \"npm run electron-dev\"",
    "react-dev": "react-scripts start",
    "electron-dev": "wait-on http://localhost:3000 && electron .",
    "build": "react-scripts build",
    "electron-build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "test": "react-scripts test --coverage --watchAll=false",
    "test:watch": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.{js,jsx} --fix",
    "format": "prettier --write src/**/*.{js,jsx,css,md}"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^7.6.0",
    "electron": "^22.3.5",
    "electron-builder": "^23.6.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.2",
    "wait-on": "^7.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ],
    "rules": {
      "max-lines": [
        "error",
        {
          "max": 200,
          "skipBlankLines": true,
          "skipComments": true
        }
      ],
      "complexity": [
        "error",
        10
      ],
      "max-depth": [
        "error",
        4
      ],
      "no-console": "warn",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.frameevolve.app",
    "productName": "Frame Evolve",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "keywords": [
    "video",
    "upscaling",
    "enhancement",
    "ai",
    "electron",
    "react"
  ],
  "author": {
    "name": "Frame Evolve Team",
    "email": "contact@frameevolve.com"
  },
  "license": "MIT"
}
